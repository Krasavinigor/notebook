<form method="get">
  <p>
    <label>Мероприятие:</label>
    <input name="event" placeholder="Введите название">
  </p>
  <p>
    <label>Статус:</label>
    <select name="select" class="form-control" id="select">
      <%@statuses.each do |status|%>
        <option><%=status[:name] %></option>
      <%end %>
    </select>
  </p>
  <p>
    <label>Адрес проведения:</label>
    <input name="address" placeholder="Введите адрес">
  </p>
  <p>
    <label>Дата и время проведения:</label>
    <input name="event_date" type="datetime-local" id="start">
  </p>
  <p>
    <input type="submit" value="Найти">
  </p>
  <%@invited_people.each do |person| %>
  <%=person[:name] %>
    <p>
      <a class="button" href="<%= person[:id] %>.txt" target="_blank" download>Скачать</a>
    </p>
  <% end %>
</form>