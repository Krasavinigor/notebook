<a href='/notes/new'>Добавить запись</a>
<a href='/notes/delete'>Удалить запись</a>
<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">Имя</th>
    <th scope="col">Фамилия</th>
    <th scope="col">Статус</th>
  </tr>
  </thead>
  <tbody>
  <% @notes.each do |note| %>
    <% @note = note %>
    <% @status = note.status %>
    <%= render :note_partial %>
    <a href="/notes/<%= note[:id] %>">Подробнее</a>
    <a href="/notes/<%= note[:id] %>/edit">Изменить</a>
  <% end  %>
  </tbody>
</table>